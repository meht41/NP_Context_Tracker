{
  "manifest_version": 3,
  "name": "Статус ТТН Новой Почты",
  "description": "Проверка статуса посылки по номеру ТТН через контекстное меню",
  "version": "1.1",
  "permissions": [
    "contextMenus",
    "notifications",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}